program = { SOI ~ pipeline ~ EOI }

pipeline = {
    expression ~ (pipe ~ expression)* ~ pipe ~ execute
}

expression = {
    identifier
}

pipe = { "|>" }
execute = { "!" }

identifier = @ {
  (ASCII_ALPHA | ASCII_DIGIT) ~ 
  (ASCII_ALPHA | ASCII_DIGIT | "-")* 
}

WHITESPACE = _{ " " | "\t" | "\n" }
